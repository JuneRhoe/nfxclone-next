{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // "paths": {
    //   "@/components/*": ["./src/*"]
    // }
    ///////////////////////////////////////////
    // "baseUrl": "src/",
    // "paths": {
    //   "@/styles/*": ["styles/*"],
    //   "@/components/*": ["components/*"]
    // }
    ///////////////////////////////////////////
    // "baseUrl": ".",
    // "paths": {
    //   "@/*": ["./*"],
    //   "@/assets/*": ["public/*"],
    //   "@/styles/*": ["src/styles/*"],
    //   "@/components/*": ["src/components/*"],
    //   "@/libs/*": ["src/libs/*"],
    // }
    "baseUrl": "src/",
    "paths": {
      "@/assets/*": ["../public/*"],
      "@/actions/*": ["actions/*"],
      "@/components/*": ["components/*"],
      "@/libs/*": ["libs/*"],
      "@/stores/*": ["stores/*"],
      "@/styles/*": ["styles/*"],
      "@/drizzle/*": ["../drizzle/*"],
      "@/drizzle-schema/*": ["drizzle-schema/*"],
    }

  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/components/UI/InputField/hooks.tsx"],
  "exclude": ["node_modules"]
}
